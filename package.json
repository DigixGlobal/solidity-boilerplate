{
  "name": "solidity-boilerplate",
  "version": "0.0.1",
  "description": "Project Boilerplate for Solidity",
  "scripts": {
    "dev": "node ./scripts/watch-tests.js",
    "test": "node ./node_modules/truffle/cli.js test test/index.js",
    "server": "testrpc -p 6545 -v",
    "testsuite": "npm run server & npm run test",
    "console": "node ./node_modules/truffle/cli.js console --network development",
    "compile": "rm -rf ./build; node ./node_modules/truffle/cli.js compile --network development",
    "inspect": "node --inspect --debug-brk ./node_modules/truffle/cli.js test",
    "deploy": "node ./node_modules/truffle/cli.js migrate --reset --network development",
    "docs:compile": "node_modules/.bin/doxity compile",
    "docs:develop": "node_modules/.bin/doxity develop",
    "docs:publish": "node_modules/.bin/doxity publish",
    "docs:build": "node_modules/.bin/doxity build"
  },
  "author": "DigixGlobal",
  "devDependencies": {
    "@digix/contest": "^0.0.3",
    "@digix/doxity": "^0.1.1",
    "@digix/sigmate": "^1.0.3",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-stage-2": "^6.17.0",
    "chokidar": "^1.6.0",
    "eslint": "^3.7.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.4.1",
    "truffle": "^2.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DigixGlobal/solidity-boilerplate.git"
  }
}
